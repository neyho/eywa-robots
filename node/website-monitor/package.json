{
  "name": "website-monitor",
  "version": "1.0.0",
  "description": "EYWA Robot for monitoring websites and triggering alerts on changes",
  "main": "monitor.js",
  "type": "module",
  "scripts": {
    "start": "node monitor.js",
    "test": "eywa run -c 'node monitor.js'",
    "test:price-drop": "eywa run --task-file test-tasks/price-drop.json -c 'node monitor.js'",
    "test:availability": "eywa run --task-file test-tasks/availability.json -c 'node monitor.js'"
  },
  "keywords": ["eywa", "robot", "rpa", "monitoring", "web-scraping"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "eywa-client": "latest",
    "puppeteer": "^21.0.0",
    "cheerio": "^1.0.0-rc.12",
    "node-fetch": "^3.3.2"
  }
}
